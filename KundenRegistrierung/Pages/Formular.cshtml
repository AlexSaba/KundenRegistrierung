@page
@model KundenRegistrierung.Pages.FormularModel
@{
}

<h2>Registrierungsformular</h2>
<div class="form-group">
    <label asp-for="VorName">Vorname</label>
    <input type="text"
           id="VorName"
           name="VorName"
           required
           minlength="4"
           maxlength="8"
           size="10" />
    <span asp-validation-for="VorName" class="text-danger"></span>

    <label asp-for="NachName">Nachname</label>
    <input type="text"
           id="NachName"
           name="NachName"
           required
           minlength="4"
           maxlength="8"
           size="10" />
    <span asp-validation-for="NachName" class="text-danger"></span>
</div>

